{
    "manifest_version": 2,
    
    "name": "1-click BOM",
    "description": "Automatically populate your electronic component shopping carts.",
    "version": "0.0.1",
    "permissions": [
        "tabs", "cookies", "http://*/*", "https://*/*", "clipboardRead", "storage"
    ],
    "browser_action": {
        "default_icon": "images/logo19.png",
        "default_popup": "html/popup.html"
    },
    "background": {
        "persistent": false,
        "page":"html/background.html"
    },
    "web_accessible_resources": [ 
        "libs/qunit-1.11.0.css", 
        "libs/qunit-1.11.0.js",
        "libs/jquery-1.10.1.min.js"
    ],
    "options_page":"html/options.html",
    "icons": {"48":"images/logo48.png", "128":"images/logo128.png"}
    
}
