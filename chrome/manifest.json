{
    "manifest_version": 2,

    "name": "1clickBOM",
    "description": "Fill your shopping carts from a bill of materials.",
    "version": "0.0.1",
    "permissions": [
        "tabs", "cookies", "http://*/*", "https://*/*", "clipboardRead", "storage", "geolocation", "notifications"
    ],
    "browser_action": {
        "default_icon": "images/logo19.png",
        "default_popup": "html/popup.html"
    },
    "background": {
        "persistent": true,
        "page":"html/background.html"
    },
    "web_accessible_resources": [
        "libs/qunit-1.11.0.css",
        "libs/qunit-1.11.0.js"
    ],
    "options_page":"html/options.html",
    "icons": { "16" :"images/logo16.png"
             , "19" :"images/logo19.png"
             , "38" :"images/logo38.png"
             , "48" :"images/logo48.png"
             , "128":"images/logo128.png"
             }

}
